	<units>m</units>
	<limits>-2 2</limits>
	<data>inv_bar_mog2d</data>
	<format>f7.4</format>
	<compress>int2 1e-4</compress>
	<comment>Combined low and high frequency effect of atmospheric pressure and wind on sea surface height</comment>
</var>

<var name="inv_bar_mok2d">
	<long_name>MOK2D inverse barometer correction</long_name>
	<units>m</units>
	<limits>-2 2</limits>
	<data>inv_bar_static 0.9603 MUL 0.0025 SUB</data>
