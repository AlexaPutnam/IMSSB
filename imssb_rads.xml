<!--SV position-->
<var name="pass_number" field="9906">
	<long_name>pass number</long_name>
	<data>:pass_number</data>
	<format>f5.0</format>
	<compress>int2</compress>
</var>


<!--SWH-->
<var name="swh_ku" field="1701">
    <long_name>Ku-band significant wave height</long_name>
    <standard_name>sea_surface_wave_significant_height</standard_name>
    <units>m</units>
    <limits>0 20</limits>
    <data>swh_ku</data>
    <format>f6.3</format>
    <compress>int2 1e-3</compress>
</var>

<var name="swh_c" field="1702" sat="2a 3a 3b 6a j1 j2 j3 tx sw">
    <long_name>C-band significant wave height</long_name>
    <standard_name>sea_surface_wave_significant_height</standard_name>
    <units>m</units>
    <limits>0 20</limits>
    <data>swh_c</data>
    <format>f6.3</format>
    <compress>int2 1e-3</compress>
</var>

<var name="swh_ku_mle3" field="1711" sat="6a j2 j3 sw">
