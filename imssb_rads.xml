<var name="ssha" field="0">
	<long_name>sea surface height anomaly</long_name>
	<standard_name>sea_surface_height_above_sea_level</standard_name>
	<units>m</units>
	<format>f8.4</format>
	<compress>int2 1e-4</compress>
	<data>alt range_ku SUB model_dry_tropo_corr SUB rad_wet_tropo_corr SUB iono_corr_alt_ku SUB dac SUB solid_earth_tide SUB ocean_tide_fes SUB load_tide_fes SUB
		pole_tide SUB sea_state_bias_ku SUB mean_sea_surface SUB</data>
	<quality_flag>swh_ku sig0_ku swh_rms_ku sig0_rms_ku range_rms_ku range_numval_ku flags</quality_flag>
	<comment>Sea level determined from satellite altitude - range - all altimetric corrections</comment>
</var>

<var name="ssha_mle3" sat="6a j2 j3 sw tx">
	<long_name>sea surface height (MLE3)</long_name>
	<standard_name>sea_surface_height_above_sea_level</standard_name>
	<units>m</units>
	<format>f8.4</format>
